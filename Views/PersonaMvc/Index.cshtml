@model IEnumerable<personapi.Models.Entities.Persona>
@{
    ViewData["Title"] = "Personas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="/Home/Index" class="btn btn-secondary">🏠 Home</a>
        <h3>Gestión de Personas</h3>
        <span><strong>Total:</strong> @ViewBag.Total</span>
    </div>

    <form asp-action="Buscar" method="get" class="d-flex mb-4">
        <input type="number" name="id" placeholder="Buscar por cédula..." class="form-control me-2" required />
        <button type="submit" class="btn btn-outline-primary">Buscar</button>
    </form>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-warning">@ViewBag.Mensaje</div>
    }

    @if (Model != null && Model.Count() == 1)
    {
        var persona = Model.First();
        <div class="card mb-4 p-3 bg-light">
            <h5>Resultado de la búsqueda</h5>
            <p><strong>Cédula:</strong> @persona.Cc</p>
            <p><strong>Nombre:</strong> @persona.Nombre @persona.Apellido</p>
            <p><strong>Edad:</strong> @persona.Edad</p>
            <p><strong>Género:</strong> @persona.Genero</p>
        </div>
    }

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-success">➕ Crear Persona</a>
    </div>

    <table class="table table-bordered table-striped text-center">
        <thead class="table-dark">
            <tr>
                <th>Cédula</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Edad</th>
                <th>Género</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Cc</td>
                    <td>@p.Nombre</td>
                    <td>@p.Apellido</td>
                    <td>@p.Edad</td>
                    <td>@p.Genero</td>
                    <td>
                        <a asp-action="Edit" asp-route-cc="@p.Cc" class="btn btn-warning btn-sm">✏️ Editar</a>
                        <a asp-action="Delete" asp-route-cc="@p.Cc" class="btn btn-danger btn-sm">🗑️ Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
