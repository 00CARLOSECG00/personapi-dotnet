@model personapi.Models.Entities.Persona

<h1>Editar Persona</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Cc" />

    <label>Nombre:</label>
    <input asp-for="Nombre" /><br />

    <label>Apellido:</label>
    <input asp-for="Apellido" /><br />

    <label>Edad:</label>
    <input asp-for="Edad" /><br />

    <label>Género:</label>
    <input asp-for="Genero" /><br />

    <button type="submit">Guardar cambios</button>
</form>

<a asp-action="Index">Volver</a>
