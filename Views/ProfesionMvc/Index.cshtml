@model IEnumerable<personapi.Models.Entities.Profesion>
@{
    ViewData["Title"] = "Profesiones";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="/Home/Index" class="btn btn-secondary">🏠 Home</a>
        <h3>Gestión de Profesiones</h3>
        <span><strong>Total:</strong> @ViewBag.Total</span>
    </div>

    <form asp-action="Buscar" method="get" class="d-flex mb-4">
        <input type="number" name="id" placeholder="Buscar por ID..." class="form-control me-2" required />
        <button type="submit" class="btn btn-outline-primary">Buscar</button>
    </form>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-warning">@ViewBag.Mensaje</div>
    }

    @if (Model != null && Model.Count() == 1)
    {
        var profesion = Model.First();
        <div class="card mb-4 p-3 bg-light">
            <h5>Resultado de la búsqueda</h5>
            <p><strong>ID:</strong> @profesion.Id</p>
            <p><strong>Nombre:</strong> @profesion.Nom</p>
            <p><strong>Descripción:</strong> @profesion.Des</p>
        </div>
    }

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-success">➕ Crear Profesión</a>
    </div>

    <table class="table table-bordered table-striped text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Nom</td>
                    <td>@p.Des</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-warning btn-sm">✏️ Editar</a>
                        <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-danger btn-sm">🗑️ Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
