@model IEnumerable<personapi.Models.Entities.Telefono>
@{
    ViewData["Title"] = "Teléfonos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="/Home/Index" class="btn btn-secondary">🏠 Home</a>
        <h3>Gestión de Teléfonos</h3>
        <span><strong>Total:</strong> @ViewBag.Total</span>
    </div>

    <form asp-action="Buscar" method="get" class="d-flex mb-4">
        <input type="text" name="num" placeholder="Buscar por número..." class="form-control me-2" required />
        <button type="submit" class="btn btn-outline-primary">Buscar</button>
    </form>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-warning">@ViewBag.Mensaje</div>
    }

    @if (Model != null && Model.Count() == 1)
    {
        var t = Model.First();
        <div class="card mb-4 p-3 bg-light">
            <h5>Resultado de la búsqueda</h5>
            <p><strong>Número:</strong> @t.Num</p>
            <p><strong>Operador:</strong> @t.Oper</p>
            <p><strong>Dueño:</strong> @t.Duenio</p>
        </div>
    }

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-success">➕ Registrar Teléfono</a>
    </div>

    <table class="table table-bordered table-striped text-center">
        <thead class="table-dark">
            <tr>
                <th>Número</th>
                <th>Operador</th>
                <th>Dueño</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Num</td>
                    <td>@t.Oper</td>
                    <td>@t.Duenio</td>
                    <td>
                        <a asp-action="Edit" asp-route-num="@t.Num" class="btn btn-warning btn-sm">✏️ Editar</a>
                        <a asp-action="Delete" asp-route-num="@t.Num" class="btn btn-danger btn-sm">🗑️ Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
